<% content_for :head do %>
  <script type="text/javascript">
    $(document).ready(function () {
      setTimeout(function () {
        SpaceAlarp.refreshData("<%= room_path(@room) %>");
      }, 2000);
    });
  </script>
<% end %>

<div class="info_column">
  <div id="dataDiv">
    <%= render :partial => 'rooms/room_status' %>
  </div>

  <br/>
  <%= render :partial => 'rooms/room_tips' %>
  <h3> Sector Damage: <%= @room.sector.damage %></h3>
</div>
<div class="action_column">
  <%= button_to_function "A", "roomsFunctions.pressAButton(#{@room.id});", :class => 'a_button' %>
  <%= button_to_function "B", "roomsFunctions.pressBButton(#{@room.id});", :class => 'b_button' %>
</div>
